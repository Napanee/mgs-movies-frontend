{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es6", "dom"],
		"module": "ESNext",
		"jsx": "react-jsx",
    "baseUrl": "./",
		"paths": {
			"~/*": ["./*", "src/*", "client/*"],
			"@components/*": ["client/js/components/*"],
			"@theme/*": ["client/js/theme/*"],
			"@pages/*": ["client/js/pages/*"]
		},
		"allowJs": false,
		"skipLibCheck": true,
		"incremental": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["**/node_modules", "**/.*/"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
